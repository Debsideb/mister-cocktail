<div class="text-center">
  <h1>New Cocktail</h1>
  <br>
  <div class="container">
    <div class="row">
      <div class="col-md-4 col-md-offset-4">
        <%= simple_form_for @cocktail do |f| %>
          <%= f.error_notification %>
          <%= f.input :name %>
          <%= f.submit "Post", class: "btn btn-primary" %>
        <% end %>
        <%= link_to("Back to Cocktail List", cocktails_path) %>
      </div>
    </div>
  </div>
</div>
