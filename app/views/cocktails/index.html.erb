<div class="text-center">
  <h1>Cocktails</h1>
  <div class="container">
    <% @cocktails.each do |cocktail| %>
      <div class="row">
        <div class="col-md-4 col-md-offset-4">
          <h3><%= cocktail.name %></h3>
        </div>
      </div>
      <div class="row">
        <div class="col-sm-12"></div>
        <%= link_to "See details", cocktail_path(cocktail.id), class: "btn btn-primary"%>
        <br>
        <br>
      </div>
    <% end %>
  </div>
  <p><%= link_to "Add a New Cocktail", new_cocktail_path, class: "btn btn-primary"%></p>
</div>
